<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin">

    <TextView
        android:id="@+id/tv_recipe1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Nutella Pie"
        android:padding="7dp"
        android:textSize="@dimen/widget_text_size"
        android:textColor="@color/colorPrimaryText"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_recipe2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Brownies"
        android:padding="7dp"
        android:textSize="@dimen/widget_text_size"
        android:textColor="@color/colorPrimaryText"
        android:background="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv_recipe3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Yellow Cake"
        android:padding="7dp"
        android:textSize="@dimen/widget_text_size"
        android:textColor="@color/colorPrimaryText"
        android:background="@color/colorPrimary"/>

    <TextView
        android:id="@+id/tv_recipe4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Cheesecake"
        android:padding="7dp"
        android:textSize="@dimen/widget_text_size"
        android:textColor="@color/colorPrimaryText"
        android:background="@color/colorPrimaryDark"/>

