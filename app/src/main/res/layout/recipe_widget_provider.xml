<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/widget_ll_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/widget_margin"
        android:visibility="visible">

        <TextView
            android:id="@+id/tv_recipe1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text="1. Nutella Pie"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/widget_text_size" />

        <TextView
            android:id="@+id/tv_recipe2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="7dp"
            android:text="2. Brownies"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/widget_text_size" />

        <TextView
            android:id="@+id/tv_recipe3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:padding="7dp"
            android:text="3. Yellow Cake"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/widget_text_size" />

        <TextView
            android:id="@+id/tv_recipe4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:padding="7dp"
            android:text="4. Cheesecake"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/widget_text_size" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/widget_ll_ings"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:visibility="invisible">

        <TextView
            android:id="@+id/widget_tv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/card_detail_size"
            android:text="BACK"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/widget_tv_ings"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:textColor="@color/colorPrimaryText"
            android:textSize="15sp" />

    </LinearLayout>

</FrameLayout>